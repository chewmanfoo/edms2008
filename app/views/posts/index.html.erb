<h1>Listing posts</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Voter</th>
    <th>Moderator</th>
    <th>Created by moderator</th>
    <th>Body</th>
    <th>Num comments</th>
  </tr>

<% for post in @posts %>
  <tr>
    <td><%=h post.name %></td>
    <td><%=h post.voter_id %></td>
    <td><%=h post.moderator_id %></td>
    <td><%=h post.created_by_moderator %></td>
    <td><%=h post.body %></td>
    <td><%=h post.num_comments %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New post', new_post_path %>
