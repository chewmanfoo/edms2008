<h1>Listing sysadmins</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Title</th>
  </tr>

<% for sysadmin in @sysadmins %>
  <tr>
    <td><%=h sysadmin.name %></td>
    <td><%=h sysadmin.title %></td>
    <td><%= link_to 'Show', sysadmin %></td>
    <td><%= link_to 'Edit', edit_sysadmin_path(sysadmin) %></td>
    <td><%= link_to 'Destroy', sysadmin, :confirm => 'Are you sure?', 
                                         :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<table border="1" cellpadding = "1" cellspacing="0">
<tr>
<th>Users</th><th>Voters</th><th>Executives</th>
</tr>
<td>
<% if @users %>
  <ul>
  <% for user in @users %>
      <li><%=h user.login %>(<%=h user.email %>)
      <ul><li><%= link_to 'Show', user %></li>
      <li><%= link_to 'Edit', edit_user_path(user) %></li>
      <li><%= link_to 'Destroy', user, :confirm => 'Are you sure?', 
                                       :method => :delete %></li></ul>
  <% end %>
  </ul>
<% end %>
</td>
<td>
<% if @voters %>
  <ul>
  <% for voter in @voters %>
      <li><%=h voter.name %>
      <ul><li><%= link_to 'Show', voter %></li>
      <li><%= link_to 'Edit', edit_voter_path(voter) %></li>
      <li><%= link_to 'Destroy', voter, :confirm => 'Are you sure?', 
                                        :method => :delete %></li></ul>
  <% end %>
  </ul>
<% end %>
</td>
<td>
<% if @executives %>
  <ul>
  <% for exec in @executives %>
      <li><%=h exec.name %>
      <ul><li><%= link_to 'Show', exec %></li>
      <li><%= link_to 'Edit', edit_executive_path(exec) %></li>
      <li><%= link_to 'Destroy', exec, :confirm => 'Are you sure?', 
                                       :method => :delete %></li></ul>
  <% end %>
  </ul>
<% end %>
</td>
</tr>
</table>
<%= link_to 'New sysadmin', new_sysadmin_path %>
