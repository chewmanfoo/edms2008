<% content_for :nav do %>
	<%= render :partial => "common/genNavigation" %>
<% end %>

<h1>New election</h1>

<% form_for(@election) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </p>
  <p>
    Ballot 
    <%= collection_select("election", "ballot_id", @ballots, "id", "name") %>
  </p>
  <p>
    Group
    <%= collection_select("election", "group_id", @groups, "id", "name") %>
  <p>
    <%= f.label :start %><br />
    <%= f.datetime_select :start %>
  </p>
  <p>
    <%= f.label :end %><br />
    <%= f.datetime_select :end %>
  </p>
  <p>
    <%= f.label :time_zone %><br />
    <%= f.text_field :time_zone %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', elections_path %>
