<h1>New election_decision_criteria</h1>

<% form_for(@election_decision_criteria) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :creator_id %><br />
    <%= f.text_field :creator_id %>
  </p>
  <p>
    <%= f.label :custom_percent %><br />
    <%= f.text_field :custom_percent %>
  </p>
  <p>
    <%= f.label :majority %><br />
    <%= f.check_box :majority %>
  </p>
  <p>
    <%= f.label :plurality %><br />
    <%= f.check_box :plurality %>
  </p>
  <p>
    <%= f.label :super_majority %><br />
    <%= f.check_box :super_majority %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', election_decision_criterias_path %>
